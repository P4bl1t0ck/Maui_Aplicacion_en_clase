<?xml version="1.0" encoding="utf-8" ?>     
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MontalvoPLayout.MainPage">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image Source="gatogatogato.jpg"
           Grid.Row="0" Grid.Column="0"
           Aspect="AspectFill" />

            <Image Source="yx3uo3mndz2f1.jpeg"
           Grid.Row="0" Grid.Column="1"
           Aspect="AspectFill" />


            <Image Source="marmota.jpg"
           Grid.Row="1" Grid.Column="0"
           Aspect="AspectFill" />
            
            <Button Grid.Row="2" 
                    Grid.Column="2" 
            x:Name="BotonStack"
            Text="IrStack"
            Clicked="BotonStack_Clicked"/>
        </Grid>
    </ScrollView>
</ContentPage>
