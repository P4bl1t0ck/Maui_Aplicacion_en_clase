<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MontalvoPLayout.flexPage"
             Title="flexPage">

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Center">
            <Image Source="arcoiris.jpg" WidthRequest="100" HeightRequest="100" />
            <Image Source="pandapanda.jpg" WidthRequest="100" HeightRequest="100" />
            <Image Source="perrrorrrro.jpg" WidthRequest="100" HeightRequest="100" />
            <Image Source="pandarojo.jpg" WidthRequest="100" HeightRequest="100" />

            <!-- BotÃ³n corregido -->
            <Button 
                x:Name="Boton"
                Text="Ir a Absolute"
                Clicked="Boton_Clicked" />
        </FlexLayout>

    </VerticalStackLayout>
</ContentPage>
