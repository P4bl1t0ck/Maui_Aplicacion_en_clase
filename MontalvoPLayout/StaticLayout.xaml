<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MontalvoPLayout.StaticLayout"
             Title="StaticLayout">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <AbsoluteLayout>

            <Image Source="heavy.jpg"
       WidthRequest="100"
       HeightRequest="100" />


        </AbsoluteLayout>
        <Button 
            x:Name="BotonStack"
            Text="IrInicio"
            Clicked="BotonStack_Clicked"
                                        />
    </VerticalStackLayout>
</ContentPage>