<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MontalvoPLayout.NewPage1"
             Title="NewPage1">
    <StackLayout Margin="20">
        <Image Source="jeje.jpg"
           HeightRequest="300"
           WidthRequest="300"
           HorizontalOptions="Center" />
        <Label Text="Pablo Montalvo"
               FontSize="36"
               TextColor="Green"
               HorizontalOptions="Center"/>
        <Label Text="Montalvo"
           FontSize="36"
           HorizontalOptions="Center" />
        <Label Text="Dato curioso: Las marmotas pueden silbar para alertar de peligro."
           FontSize="45"
           FontFamily="Comic Sans MS"
           HorizontalOptions="Center"
           TextColor="DarkSlateBlue" />
        <Button
            x:Name="BotonFlex"
            Text="IrFlex"
            Clicked="BotonFlex_Clicked">
        </Button>
    </StackLayout>
</ContentPage>